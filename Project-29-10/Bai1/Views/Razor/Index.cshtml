
@{
    Layout = null;
}
@{ 
    var total = 0;
    var num1 = "";
    var num2 = "";
    var totalMessage = "";
    var calcu = Request["PT"];
    if(IsPost)
    {
        num1 = Request["text1"];
        num2 = Request["text2"];
        if(calcu=="Cộng")
        {
            total = num1.AsInt() + num2.AsInt();
        }
        if (calcu == "Trừ")
        {
            total = num1.AsInt() - num2.AsInt();
        }
        if (calcu == "Nhân")
        {
            total = num1.AsInt() * num2.AsInt();
        }
        if (calcu == "Chia")
        {
            total = num1.AsInt() / num2.AsInt();
        }
        totalMessage = " " + total;
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" charset="utf-8"/>
    <title>Index</title>
    <style type="text/css">
        body {
            background-color: beige;
            font-family: Verdana, Arial;
            margin: 50px;
        }

        form {
            padding: 10px;
            border-style: solid;
            width: 250px;
        }
    </style>
</head>
<body>
    <form action="" method="post">
        <p>
            <label for="text1">Nhập số thứ nhất: </label>
            <input type="text" name="text1" value="@num1" />
        </p>
        <p>
            <label for="text2">Nhập số thứ 2: </label>
            <input type="text" name="text2" value="@num2" />
        </p>
        <p>
            <label for="text2">kết quả: </label><br/>
            <input type="text" value="@total" />
        </p>

        <p>
            <input type="submit" name="PT" value="Cộng" />
            <input type="submit" name="PT" value="Trừ" />
            <input type="submit" name="PT" value="Nhân" />
            <input type="submit" name="PT" value="Chia" />
        </p>
    </form>
</body>
</html>
